
@model List<ProductViewModel>
<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/FavouritesStyle.css")" />
</head>
@{
    ViewBag.Title = "Избранные товары";
}

<h2>Избранные товары</h2>

@if (Model.Count != 0)
{
    <table>
        <tr>
            <th>Название</th>
            <th>Изображение</th>
            <th>Цена</th>
            <th></th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td><img src="@Url.Content(product.ImagePath)" Width="50" /></td>
                <td>@product.Cost</td>
                <td>
                    <a href="@Url.Action("RemoveFavouritProduct","Favourites", new {id = product.Id})">Удалить из избранных</a>
                </td>
            </tr>
        }
    </table>
    <a class="button-clear" href="/Favourites/ClearAllFavourites">Очистить весь список</a>
}
else
{
    <p>Нет избранных товаров.</p>
}
<small class="text-muted"><a href="/Home/Index">Возврат на главную страницу</a></small>
