@model UserViewModel
@{
    ViewData["Title"] = "Авторизация";
}

<h2 class="text-center mt-5 mb-4">Авторизация</h2>

<div class="container" style="max-width: 1000px;">
    <div class="card mt-3 shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <form method="post" onsubmit="return validatePasswords();" class="form-horizontal">
                <div class="validation" asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label for="Name" class="col-form-label col-md-2">Логин:</label>
                    <div class="col-md-8">
                        <input asp-for="Name" type="text" id="name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"> </span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-form-label col-md-2">Пароль:</label>
                    <div class="col-md-8">
                        <input asp-for="Password" type="text" id="password" class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"> </span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8 offset-md-2">
                        <input type="checkbox" id="remember-me" name="RememberMe" />
                        <label for="remember-me">Запомнить меня</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8 offset-md-2">
                        <button type="submit" formaction="/Authorization/AcceptLogin" class="btn btn-primary">Войти</button>
                        <button type="button" formaction="/Authorization/RegistrationForm" class="btn btn-secondary ml-2" onclick="location.href=this.getAttribute('formaction')">Регистрация</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

