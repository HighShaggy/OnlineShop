@model ProductViewModel

<h2>Добавить товар</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Название продукта</label>
        <input asp-for="Name" class="form-control" aria-describedby="NameHelp" />
        <small id="NameHelp" class="form-text text-muted">Введите название продукта</small>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost">Стоимость продукта</label>
        <input asp-for="Cost" class="form-control" aria-describedby="CostHelp" onkeypress='return event.charCode >= 48 && event.charCode <= 57' />
        <small id="CostHelp" class="form-text text-muted">Введите стоимость продукта</small>
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание продукта</label>
        <input asp-for="Description" class="form-control" aria-describedby="DescriptionHelp" />
        <small id="DescriptionHelp" class="form-text text-muted">Введите описание продукта</small>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" formaction="/Admin/Product/AddProduct" class="btn btn-primary">Добавь в список товаров</button>
    <small class="text-muted"><a href="/Admin/Product/WatchProducts">Вернуть к списку товаров</a></small>
</form>