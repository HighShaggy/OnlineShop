@model ProductViewModel

@{
    ViewBag.Title = "Edit Product";
}

<div class="container mt-5">
    <h2 class="text-center">Изменить товар</h2>

    <form asp-action="EditProduct" asp-controller="Product" asp-area="Admin" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Название продукта</label>
            <input asp-for="Name" class="form-control" aria-describedby="NameHelp" value="@Model.Name" />
            <small id="NameHelp" class="form-text text-muted">Введите название продукта</small>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cost">Стоимость продукта</label>
            <input asp-for="Cost" class="form-control" aria-describedby="CostHelp" onkeypress='return event.charCode >= 48 && event.charCode <= 57' value="@Model.Cost" />
            <small id="CostHelp" class="form-text text-muted">Введите стоимость продукта</small>
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Описание продукта</label>
            <input asp-for="Description" class="form-control" aria-describedby="DescriptionHelp" value="@Model.Description" />
            <small id="DescriptionHelp" class="form-text text-muted">Введите описание продукта</small>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-center align-items-center flex-column">
            <form id="myForm" method="post" action="/Product/WatchProducts">
                <button type="submit" class="btn btn-primary mb-2" id="submitButton">Сохранить</button>
            </form>
            <small class="text-muted"><a href="/Admin/WatchProducts">Вернуть к списку товаров</a></small>
        </div>
    </form>
</div>
