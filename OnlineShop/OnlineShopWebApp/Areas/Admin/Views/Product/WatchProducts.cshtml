@model List<ProductViewModel>

<h1>Список товаров</h1>
<a asp-controller="Product" asp-action="AddProduct" asp-area="Admin" class="btn btn-primary">Добавить товар</a>

@if (Model?.Count > 0)
{
    <table style="border-collapse: collapse; width: 100%;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="border: 1px solid #ddd; padding: 8px;">ID товара</th>
                <th style="border: 1px solid #ddd; padding: 8px;">Название</th>
                <th style="border: 1px solid #ddd; padding: 8px;">Цена</th>
                <th style="border: 1px solid #ddd; padding: 8px;"></th>
                <th style="border: 1px solid #ddd; padding: 8px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td style="border: 1px solid #ddd; padding: 8px;">@product.Id</td>
                    <td> <a asp-controller="Product" asp-action="Details" asp-area="" asp-route-id="@product.Id">@product.Name</a></td>
                    <td style="border: 1px solid #ddd; padding: 8px;">@product.Cost</td>
                    <td style="border: 1px solid #ddd; padding: 8px;"><a asp-controller="Product" asp-action="EditProduct" asp-area="Admin" asp-route-id="@product.Id">Редактировать</a></td>
                    <td style="border: 1px solid #ddd; padding: 8px;"><a asp-controller="Product" asp-action="RemoveProduct" asp-area="Admin" asp-route-id="@product.Id">Удалить</a></td>
                    @* <td style="border: 1px solid #ddd; padding: 8px;">
