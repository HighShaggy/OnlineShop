@model UserViewModel

<div class="container mt-5">
    <h2 class="text-center">Изменить данные</h2>

    <form asp-action="EditData" asp-controller="User" asp-area="Admin" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Имя пользователя</label>
            <input asp-for="Name" class="form-control" aria-describedby="DescriptionHelp" value="@Model.Name" />
            <small id="DescriptionHelp" class="form-text text-muted">Введите новое имя пользователя</small>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-center align-items-center flex-column">
            <button type="submit" class="btn btn-primary mb-2">Сохранить</button>
            <small class="text-muted"><a href="/Admin/User/WatchUsers">Вернуться к списку пользователей</a></small>
        </div>
    </form>
</div>
