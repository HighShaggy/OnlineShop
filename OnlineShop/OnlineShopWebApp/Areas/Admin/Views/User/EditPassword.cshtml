@model UserViewModel

<div class="container mt-5">
    <h2 class="text-center">Изменить пароль</h2>

    <form asp-action="EditPassword" asp-controller="User" asp-area="Admin" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Имя пользователя: @Model.Name</label>
        </div>

        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" class="form-control" aria-describedby="DescriptionHelp" value="@Model.Password" />
            <small id="DescriptionHelp" class="form-text text-muted">Введите новый пароль</small>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-center align-items-center flex-column">
            <button type="submit" class="btn btn-primary mb-2">Сохранить</button>
            <small class="text-muted"><a href="/Admin/User/WatchUsers">Вернуться к списку пользователей</a></small>
        </div>
    </form>
</div>
